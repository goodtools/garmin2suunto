<view class="scroll-view-container">

    <block wx:for='{{ list }}' wx:key='{{ item.activityId }}'>

        <view class='articles-container' bindlongpress="onLongTap" data-activityId="{{ item.activityId }}"
              data-moveId="{{ item.moveId }}">

            <view class='titlebar flex'>
                <image class='data_list_24' src="../../image/data_list_icon_{{ item.type }}.png"></image>
                <text class='title'>{{ item.title }}</text>

                <view wx:if="{{length > 5}}">1</view>
                <view wx:elif="{{length > 2}}">2</view>

                <image wx:if="{{ item.moveId }}" class='data_list_20' src='../../image/ok.png'></image>
                <image wx:else class='data_list_20' src=''></image>

            </view>

            <view class='flex'>

                <view>
                    <text class="small flexitem">{{ item.duration }}min</text>
                    <image class='data_list_20 flexitem' src='../../image/duration.png'></image>

                    <text class="small flexitem">{{ item.speed }}</text>
                    <image class='data_list_20 flexitem' src='../../image/speed.png'></image>

                </view>

                <view>
                    <text class="small flexitem">{{ item.distance }}km</text>
                    <image class='data_list_20 flexitem' src='../../image/distance.png'></image>

                    <text class="small flexitem">{{ item.hr }}</text>
                    <image class='data_list_20 flexitem' src='../../image/hr.png'></image>

                </view>

                <view>
                    <text class="small flexitem">{{ item.calories }}</text>
                    <image class='data_list_20 flexitem' src='../../image/fire.png'></image>

                    <text class="small flexitem">{{ item.cadence }}</text>
                    <image class='data_list_20 flexitem' src='../../image/cadence.png'></image>

                </view>

            </view>

        </view>
    </block>
</view>