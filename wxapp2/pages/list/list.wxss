.scroll-view-container {
  background-color: #fff;
  height:100vh;
}

.data_list_24{
  width: 24px;
  height: 24px;
}

.data_list_20{
  width: 18px;
  height: 18px;
}

.flex{
  display:flex;
  justify-content: space-around;
}

.flexview {
  display: flex;
  justify-content: center;  
}

.flexitem{
  display: block;
  /*display: inline-block;*/
  vertical-align: middle;
}

.small {
  font-size: 14px;
}

.info {
  font-size: 12px;
  margin: 20rpx 0rpx;
  height: 100%;
}

.titlebar {
  padding: 10px
}

.list{
  overflow:auto;
  margin:auto;
  position:absolute;
  top:0;
  bottom:0;
  left:0;
  right:0;
}
